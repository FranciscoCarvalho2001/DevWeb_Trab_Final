@page
@model AccessDeniedModel
@{
    ViewData["Title"] = "Access denied";
}

<header>
    <h1 class="text-danger">ACESSO NEGADO</h1>
    <p class="text-danger">Você não tem permissão para ver este recurso.</p>
</header>

@section Scripts {
    <script>
        var timeout = 2000; // 2000 milisegundos = 2 segundos

        setTimeout(function () {
            window.location.href = '@Url.Page("/Home/Index")';
        }, timeout);
    </script>
}
