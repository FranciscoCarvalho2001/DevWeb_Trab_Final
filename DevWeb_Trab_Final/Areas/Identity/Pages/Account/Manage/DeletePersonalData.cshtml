@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3>@ViewData["Title"]</h3>

@if (User.IsInRole("Cliente") || User.IsInRole("Funcionario"))
{
    <div class="alert alert-warning" role="alert">
        <p>
            <strong>A eliminação destes dados eliminará permanentemente a sua conta, que não poderá ser recuperada.</strong>
        </p>
    </div>

    <div>
        <form id="delete-user" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            @if (Model.RequirePassword)
            {
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Por favor, introduza a sua palavra-passe." />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
            }
            <button class="w-100 btn btn-lg btn-danger" type="submit">Eliminar dados e encerrar a minha conta.</button>
        </form>
    </div>
}
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
